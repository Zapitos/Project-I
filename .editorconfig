root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.{gd,tscn,tres,import,shader,md,gitignore,gitattributes}]
indent_style = tab
indent_size = 4

[*.{yml,yaml,json}]
indent_style = space
indent_size = 2

[*.{ps1,bat,cmd}]
end_of_line = crlf
indent_style = space
indent_size = 2
